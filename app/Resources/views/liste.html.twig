{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper">
	<div class="container">
		<h1 align="center" ><span>Nombre total des Musees</span> 	{{ pagination.getTotalItemCount }}
		</h1>
		<table class="table table-striped">
			<th>{{ knp_pagination_sortable(pagination, 'Nom de Musee', 'a.nom') }}</th>
			<th >{{ knp_pagination_sortable(pagination, 'Statut', 'a.statut') }}</th>
			<th >{{ knp_pagination_sortable(pagination, 'Site Web', 'a.siteWeb') }}</th>
			<th ></th>


			{% for article in pagination %}
			<tr {% if loop.index is odd %}class="color"{% endif %}>
				<td  {% if pagination.isSorted('a.nom') %} bgcolor="#ffff35"{% endif %}  >{{ article.nom }}</td>
				<td {% if pagination.isSorted('a.statut') %} bgcolor="#ffff35"{% endif %}  >{{ article.statut }}</td>
				<td {% if pagination.isSorted('a.siteWeb') %} bgcolor="#ffff35"{% endif %}  ><a href="http://{{ article.siteWeb }} " target="_blank"  >{{ article.siteWeb }} </a> </td>
				<td ><a href="/unMusee/{{ article.id }}"  >Plus d'info... </a> </td>
				
			</tr>
			{% endfor %}


		</table>


			<div class="navigation  text-center">
				{{ knp_pagination_render(pagination) }}
			</div>
			<br>
			<a class="btn btn-primary btn-lg btn-block" href='/' role="button">Accueil</a> 
			<br>	

	</div>
</div>
{% endblock %}