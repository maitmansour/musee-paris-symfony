{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
{% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
    <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-10">
            <input class="form-control form-control-lg"  type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
    </div>

    <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-10">
            <input class="form-control form-control-lg"  type="password" id="password" name="_password" required="required"  />
        </div>
    </div>


    <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">{{ 'security.login.remember_me'|trans }}</label>
                <div class="col-sm-10">

            <input class="form-control form-control-lg"  type="checkbox" id="remember_me" name="_remember_me" value="on"  />
            </div>
    </div>

    <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Se connecter</label>
        <div class="col-sm-9">
            <input type="submit"  class="btn btn-success btn-lg btn-block" id="_submit" name="_submit" value="{{ 'Se connecter'|trans }}" />
        </div>
    </div>

</form>
<a class="btn btn-primary btn-lg btn-block" href='/' role="button"> Acceuil</a>  

